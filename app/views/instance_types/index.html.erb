<p id="notice"><%= notice %></p>

<h1>Instance Types</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>Region</th>
      <th>Machine type</th>
      <th>Os type</th>
      <th>Price</th>
      <th>Price 1y</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instance_types.each do |instance_type| %>
      <tr>
        <td><%= instance_type.provider_id %></td>
        <td><%= instance_type.region_id %></td>
        <td><%= instance_type.machine_type_id %></td>
        <td><%= instance_type.os_type %></td>
        <td><%= instance_type.price %></td>
        <td><%= instance_type.price_1y %></td>
        <td><%= link_to 'Show', instance_type %></td>
        <td><%= link_to 'Edit', edit_instance_type_path(instance_type) %></td>
        <td><%= link_to 'Destroy', instance_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

