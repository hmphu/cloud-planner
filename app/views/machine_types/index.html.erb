<p id="notice"><%= notice %></p>

<h1>Machine Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Core count</th>
      <th>Memory size</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machine_types.each do |machine_type| %>
      <tr>
        <td><%= machine_type.name %></td>
        <td><%= machine_type.core_count %></td>
        <td><%= machine_type.memory_size %></td>
        <td><%= machine_type.provider_id %></td>
        <td><%= link_to 'Show', machine_type %></td>
        <td><%= link_to 'Edit', edit_machine_type_path(machine_type) %></td>
        <td><%= link_to 'Destroy', machine_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

